= simple_form_for :comment, url: blog_post_comments_path(@blog_post.slug) do |f|
  = f.input :name
  = f.input :email, as: :email
  = f.input :organisation, required: false
  = f.input :comment, as: :text
  = f.input :website, as: :text, tabindex: '-1', autocomplete: :off, style: 'display:none !important'

  = f.button :submit, t('simple_form.labels.comment.create'), class: 'button cta'
