.container.content_page

  %h1= @page.title

  .indented
    / -if @page.try(:summary)
    /   %h4=@page.summary
    = parse_markdown(@page.content)
    
    = render(partial: 'prototypes/prototypes', locals: { prototypes: @prototypes }) if @prototypes
    = render(partial: 'research_reports/research_reports', locals: { research_reports: @research_reports }) if @research_reports
